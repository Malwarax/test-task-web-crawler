@model WebCrawler.WebApplication.Models.TestsModel
@{
    ViewData["Title"] = "Start page";
}

<div class="container mt-5">

    <form method="post">
        <div class="row align-items-center">
            <div class="col-auto">
                <label for="" class="col-form-label">Enter a website</label>
            </div>
            <div class="col-auto">
                <input type="text" name="url" class="form-control">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </div>
    </form>

    <div class="row text-center mt-5 table-responsive">
        <h1 class="h2">Test results</h1>
        <table id="testsTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th class="w-50">Website</th>
                    <th class="w-25">Date</th>
                    <th class="w-25"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var test in Model.Tests)
                {
                    <tr>
                        <td>@test.Url</td>
                        <td>@test.Date</td>
                        <td><a asp-action="Index" asp-controller="Results" asp-route-id=@test.Id>see details</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#testsTable').DataTable({
            searching: false,
            ordering: false,
            order: false,
            "pageLength": 50
        });
    });
</script>

